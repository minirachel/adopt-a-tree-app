  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Adopt-A-Tree App</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Slab:wght@600&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="wrapper">
      <header>
        <div class="logo">
           <h1><a href="/">Adopt-A-Tree</a></h1>
        </div>
        
        <% if Helper.is_logged_in?(session)%>
        <%= @error %>
          <div class="user"><a href="/dashboard">dashboard</a>
          <a href="/logout">logout</a></div>
        <% else %>
          <div class="user"><a href="/login">login</a>
          <a href="/signup">sign up</a></div>
        <% end %>

      </header>
      
      
        <% if flash.has?(:message) %>
          <div class="banner">  
          <%= flash[:message] %>
          </div>
        <% end %>
     

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>Adopt-A-Tree App</strong></small>
        
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
